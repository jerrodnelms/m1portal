<p id="notice"><%= notice %></p>

<h1>Listing Shf Omitted Conditions</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Surg hosp form</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shf_omitted_conditions.each do |shf_omitted_condition| %>
      <tr>
        <td><%= shf_omitted_condition.name %></td>
        <td><%= shf_omitted_condition.surg_hosp_form.name if shf_omitted_condition.surg_hosp_form and shf_omitted_condition.surg_hosp_form.name %></td>
        <td><%= link_to 'Show', shf_omitted_condition %></td>
        <td><%= link_to 'Edit', edit_shf_omitted_condition_path(shf_omitted_condition) %></td>
        <td><%= link_to 'Destroy', shf_omitted_condition, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Shf omitted condition', new_shf_omitted_condition_path %>

<br>
<h3>Import Conditions</h3>
<br>
<p>To import multiple conditions from a .csv file:
  1) Click Choose File
  2) Once a file is chosen, click "Import Conditions" </p>
<br>
<%= form_tag import_shf_omitted_conditions_path, multipart: true do %>
    <%= file_field_tag :file %>
    <%= button_tag "Import Conditions" %>
<% end %>