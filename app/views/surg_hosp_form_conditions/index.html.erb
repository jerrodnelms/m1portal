<p id="notice"><%= notice %></p>

<h1>Listing Surgery/Hospital Form Conditions</h1>

<table>
  <thead>
    <tr>
      <th>Condition Name</th>
      <th>Surgery/Hospital Form</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @surg_hosp_form_conditions.each do |surg_hosp_form_condition| %>
      <tr class="<%= cycle('even','odd') %>">
        <td><%= surg_hosp_form_condition.name %></td>
        <td><%= surg_hosp_form_condition.surg_hosp_form.name if surg_hosp_form_condition.surg_hosp_form and surg_hosp_form_condition.surg_hosp_form.name %></td>
        <td><%= link_to 'Show', surg_hosp_form_condition %></td>
        <td><%= link_to 'Edit', edit_surg_hosp_form_condition_path(surg_hosp_form_condition) %></td>
        <td><%= link_to 'Destroy', surg_hosp_form_condition, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

